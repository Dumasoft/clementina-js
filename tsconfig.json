{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist",
        "sourceMap": true,
        "lib": [
            "es2017",
            "dom"
        ],
        "noImplicitAny": false,
        "moduleResolution": "node",
        "removeComments": true,
        "target": "es5",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
    }
}
